<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/rowPicture"
            android:layout_width="@dimen/rv_img_width"
            android:layout_height="@dimen/rv_img_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/row_top_margin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/row_right_margin">

            <ImageView
                android:id="@+id/heartImg"
                android:layout_width="@dimen/ic_width"
                android:layout_height="@dimen/ic_height"
                android:src="@drawable/empty_heart"/>

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/row_left_margin"/>

        </LinearLayout>


        <TextView
            android:id="@+id/rowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/row_bottom_margin"
            android:textSize="@dimen/main_text" />

    </LinearLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <ImageView
        android:id="@+id/imgSelector"
        android:layout_width="@dimen/main_img_width"
        android:layout_height="@dimen/main_img_height"
        android:layout_marginTop="@dimen/first_top_margin"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_upload"/>


    <EditText
        android:id="@+id/comment"
        android:layout_below="@id/imgSelector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_height"
        android:textSize="@dimen/main_text"
        android:hint="Comment..."/>


    <Button
        android:id="@+id/uploadBtn"
        android:layout_below="@id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/row_top_margin"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/main_text"
        android:text="@string/button"/>

</RelativeLayout>

